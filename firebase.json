{
  "hosting": {
    "public": "dist",
    "site": {
      "targets": {
        "webapp-authentic": {
          "hosting": {
            "production-site": ["vue-multitenant-app"]
          }
        },
        "webapp-authentic-staging": {
          "hosting": {
            "staging-site": ["vue-multitenant-app-staging"]
          }
        }
      }
    },
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "database": {
    "rules": "database.rules.json"
  }
}
